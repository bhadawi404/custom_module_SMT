<odoo>
    <!-- tree master data product -->
    <record id="smt_master_data_product_views_tree" model="ir.ui.view">
        <field name="name">smt.master.data.product.views.tree</field>
        <field name="model">smt.master.data.product</field>
        <field name="arch" type="xml">
            <tree string="Master Product">
                <field name="name"/>
                <field name="item_description" />
                <field name="item_price" />
            </tree>
        </field>
    </record>
    <!-- end tree master data product -->

    <!-- form master data product -->
    <record id="smt_master_data_product_views_form" model="ir.ui.view">
        <field name="name">smt.master.data.product.views.form</field>
        <field name="model">smt.master.data.product</field>
        <field name="arch" type="xml">
            <form string="Master Product" duplicate="0">
                <sheet name="product_form">
                    <div class="oe_title">
                        <label for="name" string="Product Name"/>
                        <h1>
                            <div class="d-flex">
                                <field name="priority" widget="priority" class="mr-3"/>
                                <field class="text-break" name="name" placeholder="e.g. Cheese Burger" required="1"/>
                            </div>
                        </h1>
                    </div>
                    <style> div[name="options"] .o_field_boolean {
                                margin-left: 10px;
                                margin-right: 0px;
                            }
                    </style>
                    <div name="options" groups="base.group_user">
                        <span class="d-inline-block">
                            <field name="sale_ok"/>
                            <label for="sale_ok"/>
                        </span>
                        <span class="d-inline-block">
                            <field name="purchase_ok"/>
                            <label for="purchase_ok"/>
                        </span>
                    </div>
                    <notebook>
                        <page string="General Information" name="general_information">
                            <group>
                                <group name="group_general">
                                    <field name="item_code" required="1"/>
                                    <field name="item_description" />
                                    <field name="customer_id" attrs="{'invisible': [('sale_ok', '=', False)]}"/>
                                    <field name="supplier_id" attrs="{'invisible': [('purchase_ok', '=', False)]}"/>
                                </group>
                                <group name="group_price">
                                    <field name="item_price" required="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>

            </form>
        </field>
    </record>
    <!-- end form master data product -->

    <!-- kanban master data product -->
    <record id="smt_master_data_product_views_kanban" model="ir.ui.view">
        <field name="name">smt_master_data_product_views_kanban</field>
        <field name="model">smt.master.data.product</field>
        <field name="arch" type="xml">
            <kanban sample="1">
                <field name="id"/>
                <field name="item_price"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <field name="priority" widget="priority" readonly="1"/>
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                    <small t-if="record.item_code.value">[                                        <field name="item_code"/>
]</small>
                                </strong>
                                <ul>
                                    <li>
                                        <strong>Price: <field name="item_price"></field>
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <!-- end kanban master data product -->

    <!-- action master data product -->
    <record id="smt_master_data_product_views_action" model="ir.actions.act_window">
        <field name="name">Master Product</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">smt.master.data.product</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create"> No Master Product available. </p>
            <p> Create new one from scratch. </p>
        </field>
    </record>
    <!-- end action master data product -->
</odoo>